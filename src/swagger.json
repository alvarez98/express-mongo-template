{
    "swagger": "2.0",
    "info": {
        "title": "Bulk Data API",
        "description": "API para cuestionarios, notificaciones y tags del Sistema de Servicios Escolares",
        "version": "1.0"
    },
    "produces": ["application/json"],
    "host": "https://bulk-data-api.herokuapp.com",
    "basePath": "/api",
    "paths": {
        "/notifications": {
            "post": {
                "summary": "Agrega notificaciones",
                "tags": ["notifications"],
                "description": "Guarda y envia nuevas notificaciones",
                "parameters": [{
                        "in": "body",
                        "required": true,
                        "name": "body",
                        "description": "Esquema del cuerpo",
                        "schema": {
                            "properties": {
                                "user": {
                                    "type": "string",
                                    "format":"uuid"
                                },
                                "message": {
                                    "type": "string"
                                },
                                "subject": {
                                    "type": "string"
                                },
                                "date": {
                                    "type": "string",
                                    "format": "date"
                                },
                                "data": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    {
                        "in": "header",
                        "name": "Authorization",
                        "description": "Access token",
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "{ uuid:uuid, message: Success }"
                    }
                }
            },
            "get": {
                "summary": "Regresa una lista de notificaciones",
                "tags": ["notifications"],
                "parameters": [{
                    "in": "query",
                    "name": "offset",
                    "schema": {
                        "type": "integer"
                    },
                    "description": "Número entero de items a ignorar al obtener la lista"
                }, {
                    "in": "query",
                    "name": "limit",
                    "schema": {
                        "type": "integer"
                    },
                    "description": "Número entero de items a retornar"
                }, {
                    "in": "query",
                    "name": "read",
                    "schema": {
                        "type": "boolean"
                    },
                    "description": "Valor booleano para obtener las notificaciones leídas y no leídas"
                }, {
                    "in": "query",
                    "name": "user",
                    "schema": {
                        "type": "uuid"
                    },
                    "description": "Retorna las notificaciones dirigidas a un usuario en específico"
                }, {
                    "in": "query",
                    "name": "orderBy",
                    "schema": {
                        "type": "'user'/'subject'/'date'"
                    },
                    "description": "Retorna la lista ordenada según el valor indicado"
                }],
                "responses": {
                    "200": {
                        "description": "{ data: [], count: 20, offset: 0 }"
                    }
                }
            },
            "delete": {
                "summary": "Elimina una notificación",
                "tags": ["notifications"],
                "parameters": [{
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "uuid"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "{ message: 'Deleted' }"
                    }
                }
            },
            "put": {
                "summary": "Actualiza una notificación",
                "tags": ["notifications"],
                "description": "Actualiza una notificación partir del id",
                "parameters": [{
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "uuid"
                        }
                    },{
                        "in": "body",
                        "required": true,
                        "name": "body",
                        "description": "Esquema del cuerpo",
                        "schema": {
                            "properties": {
                                "user": {
                                    "type": "string",
                                    "format":"uuid"
                                },
                                "message": {
                                    "type": "string"
                                },
                                "subject": {
                                    "type": "string"
                                },
                                "date": {
                                    "type": "string",
                                    "format": "date"
                                },
                                "data": {
                                    "type": "object"
                                },
                                "read": {
                                    "type": "boolean"
                                }
                            }
                        }
                    },
                    {
                        "in": "header",
                        "name": "Authorization",
                        "description": "Access token",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "{ 'id': 'uuid', 'message': 'Updated', 'changes': 0 }"
                    }
                }
            }
        },
        "/notifications/{id}": {
            "get": {
                "summary": "Retorna una notificación a partir del id",
                "tags": ["notifications"],
                "parameters": [{
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "uuid"
                        }
                    },
                    {
                        "in": "header",
                        "name": "Authorization",
                        "description": "Access token",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "{ data: {}, message: 'Success' }"
                    }
                }
            }
        },
        "/tags": {
            "post": {
                "summary": "Agrega tags",
                "tags": ["tags"],
                "description": "Guarda nuevos tags",
                "parameters": [{
                        "in": "body",
                        "required": true,
                        "name": "body",
                        "description": "Esquema del cuerpo",
                        "schema": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    {
                        "in": "header",
                        "name": "Authorization",
                        "description": "Access token",
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "{ uuid:uuid, message: Success }"
                    }
                }
            },
            "get": {
                "summary": "Regresa una lista de tags",
                "tags": ["tags"],
                "parameters": [{
                    "in": "query",
                    "name": "offset",
                    "schema": {
                        "type": "integer"
                    },
                    "description": "Número entero de items a ignorar al obtener la lista"
                }, {
                    "in": "query",
                    "name": "limit",
                    "schema": {
                        "type": "integer"
                    },
                    "description": "Número entero de items a retornar"
                }, {
                    "in": "query",
                    "name": "name",
                    "schema": {
                        "type": "string"
                    },
                    "description": "Retorna los tags a partir del nombre"
                }, {
                    "in": "query",
                    "name": "orderBy",
                    "schema": {
                        "type": "string"
                    },
                    "description": "'name'/'_id'"
                }],
                "responses": {
                    "200": {
                        "description": "{ data: [], count: 20, offset: 0 }"
                    }
                }
            },
            "delete": {
                "summary": "Elimina un tag",
                "tags": ["tags"],
                "parameters": [{
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "uuid"
                    }
                }],
                "responses": {
                    "200": {
                        "description": "{ message: 'Deleted' }"
                    }
                }
            },
            "put": {
                "summary": "Actualiza un tag",
                "tags": ["tags"],
                "description": "Actualiza un tag partir del id",
                "parameters": [{
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "uuid"
                        }
                    },{
                        "in": "body",
                        "required": true,
                        "name": "body",
                        "description": "Esquema del cuerpo",
                        "schema": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    {
                        "in": "header",
                        "name": "Authorization",
                        "description": "Access token",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "{ 'id': 'uuid', 'message': 'Updated', 'changes': 0 }"
                    }
                }
            }
        },
        "/tags/{id}": {
            "get": {
                "summary": "Retorna un tag a partir del id",
                "tags": ["tags"],
                "parameters": [{
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "uuid"
                        }
                    },
                    {
                        "in": "header",
                        "name": "Authorization",
                        "description": "Access token",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "{ data: {}, message: 'Success' }"
                    }
                }
            }
        }
    }
}
